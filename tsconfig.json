{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "esModuleInterop": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@store/*": ["./store/*"],
      "@controls/*": ["./controls/*"],
      "@utils/*": ["./utils/*"],
      "@graphql/*": ["./graphql/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__test__/**/*"]
}
